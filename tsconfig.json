{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": ".",
    "types": [
      "vuetify"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
    "include": [
    "../env.d.ts", 
    "src/**/*", 
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
}
